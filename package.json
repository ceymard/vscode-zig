{
	"name": "zig-complete",
	"displayName": "Zig code completion (js)",
	"description": "Temporary code completion support for the Zig programming language while waiting for the real zig compiler to do the task",
	"version": "0.1.0",
	"publisher": "ceymard",
	"icon": "images/zig-icon.png",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/ceymard/vscode-zig-complete"
	},
	"engines": {
		"vscode": "^1.17.0"
	},
	"categories": [
		"Programming Languages"
	],
	"activationEvents": [
		"onLanguage:zig"
	],
	"main": "./out/extension",
	"contributes": {
		"languages": [
			{
				"id": "zig",
				"extensions": [
					".zig"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "zig",
				"scopeName": "source.zig",
				"path": "./syntaxes/zig.tmLanguage.json"
			}
		],
		"configuration": {
			"type": "object",
			"title": "zig-complete",
			"properties": {}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"@types/mocha": "^2.2.48",
		"@types/node": "^12.7.8",
		"typescript": "^3.6.2",
		"vscode": "^1.1.33"
	},
	"dependencies": {
		"@types/chalk": "^2.2.0",
		"@types/which": "^1.3.1",
		"chalk": "^2.4.2",
		"which": "^1.3.1"
	}
}
